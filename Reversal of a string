/*Using For loop */
function reverseString(str) {
    var newString = "";
    for (var i = str.length - 1; i >= 0; i--) {
        newString += str[i];
    }
    return newString;
}
reverseString('Epam');

/* Using Built in methods */
let str="Epam";
str=str.split('').reverse().join('');
console.log(str);

/* Using Recursion */
function reverseString(str) {
  return (str === '') ? '' : reverseString(str.substr(1)) + str.charAt(0);
}
reverseString("Epam");
